<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.toolbar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="tvStyleLargeBold" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_30sdp</item>
    </style>

    <style name="tvStyleMediumBold" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="tvStyleSmallBold" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="tvStyleLargeRegular" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_38sdp</item>
    </style>

    <style name="tvStyleMediumRegular" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="tvStyleSmallRegular" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="etStyleRegular" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/ic_input</item>
    </style>

</resources>
