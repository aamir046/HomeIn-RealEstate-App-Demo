<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="section" type="com.example.mvvmclean.ui.home.Section.DiscountOfferSection" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardBackgroundColor="@color/gray">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_discount_offer_banner"/>

                <TextView
                    android:id="@+id/textDiscountOffer"
                    style="@style/tvStyleMediumRegular"
                    android:textSize="@dimen/_14sdp"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Flat Discount Upto 40% \non all Properties one time"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_discountOfferDate"
                    style="@style/tvStyleMediumRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting Soon"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>


